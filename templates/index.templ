package templates

import "toxic-chronos/models"

templ Index(c []models.Countdown) {
	<html style="min-height: 100%; min-width: 100%; margin: 0; padding: 0;">
		<body style="min-height: 100%; min-width: 100%; margin: 0; padding: 0; background: black; color: white;">
			<div style="display: flex; flex-direction: column; align-items: center;">
				for _, item := range c {
					@Countdown(item)
				}
			</div>
		</body>
	</html>
}
